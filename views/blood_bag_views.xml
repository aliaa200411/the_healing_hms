<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Blood Bag List View -->
    <record id="view_blood_bag_list" model="ir.ui.view">
        <field name="name">blood.bank.bag.list</field>
        <field name="model">blood.bank.bag</field>
        <field name="arch" type="xml">
            <list string="Blood Bags">
                <field name="name"/>
                <field name="donor_id"/>
                <field name="blood_type"/>
                <field name="rh"/>
                <field name="donation_date"/>
                <field name="expiry_date"/>
                <field name="status"/>
                <field name="days_left"/>
            </list>
        </field>
    </record>

    <!-- Blood Bag Form View -->
    <record id="view_blood_bag_form" model="ir.ui.view">
        <field name="name">blood.bank.bag.form</field>
        <field name="model">blood.bank.bag</field>
        <field name="arch" type="xml">
            <form string="Blood Bag">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="donor_id"/>
                        <field name="blood_type"/>
                        <field name="rh"/>
                        <field name="donation_date"/>
                        <field name="expiry_date"/>
                        <field name="units"/>
                        <field name="status"/> 
                        <field name="days_left" readonly="1"/>
                    </group>
                    <group>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Blood Bag Action -->
    <record id="action_blood_bag" model="ir.actions.act_window">
        <field name="name">Blood Bags</field>
        <field name="res_model">blood.bank.bag</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
