<odoo>
    <!-- Action لفتح السجل الطبي -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Medical Record</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Action الأطباء -->
    <record id="action_doctor" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- قائمة الأطباء -->
    <record id="view_doctor_list" model="ir.ui.view">
        <field name="name">hospital.doctor.list</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <list>
                <field name="doctor_id"/>
                <field name="user_id"/>
                <field name="specialization_id"/>
                <field name="department_id"/>
                <field name="experience_years"/>
                <field name="working_hours"/>
                <field name="is_available"/>
            </list>
        </field>
    </record>

    <!-- نموذج الطبيب -->
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <group>
                        <field name="doctor_id"/>
                         <field name="name"/>
                        <field name="user_id"/>
                        <field name="specialization_id"/>
                        <field name="department_id"/>
                        <field name="experience_years"/>
                        <field name="working_hours"/>
                        <field name="is_available"/>
                        <field name="hire_date"/>
                        <field name="salary"/>
                    </group>

                    <notebook>
                        <page string="Patients">
                            <!-- Smart Buttons فوق الجدول -->
                            <field name="patient_ids">
                                <list editable="bottom">
                                    <field name="first_name"/>
                                    <field name="last_name"/>
                                    <field name="dob"/>
                                    <field name="gender"/>
                                    <field name="diagnosis"/>
                                    <field name="age"/>
                                    <!-- الرابط لفتح السجل الطبي لكل مريض -->
                                <button name="action_view_patient_history" 
                                            type="object" 
                                            string=" View Patient History" 
                                            class="btn-secondary"/>

                                <button name="action_view_prescriptions"
                                        type="object"
                                        string="View My Prescriptions"
                                        class="oe_highlight"/>
                                <button name="action_create_prescription"
                                        type="object"
                                        string="Create New Prescription"
                                        class="btn-primary"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
