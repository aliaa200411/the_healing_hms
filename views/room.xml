<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ================== Room List View ================== -->
    <record id="view_hospital_room_list" model="ir.ui.view">
        <field name="name">hospital.room.list</field>
        <field name="model">hospital.room</field>
        <field name="arch" type="xml">
            <list string="Rooms">
                <field name="department_id"/>
                <field name="room_number"/>
                <field name="room_type"/>
                <field name="capacity" readonly="1"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- ================== Room Form View ================== -->
    <record id="view_hospital_room_form" model="ir.ui.view">
        <field name="name">hospital.room.form</field>
        <field name="model">hospital.room</field>
        <field name="arch" type="xml">
            <form string="Room">
                <sheet>
                    <group string="Room Details">
                        <field name="department_id"/>
                        <field name="room_number"/>
                        <field name="room_type" required="1"/>
                        <field name="capacity" readonly="1"/>
                    </group>
                    <group string="Location &amp; Status">
                        <field name="state"/>
                        <field name="floor"/>
                        <field name="wing"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- ================== Room Action + Menu ================== -->
    <record id="action_hospital_room" model="ir.actions.act_window">
        <field name="name">Hospital Rooms</field>
        <field name="res_model">hospital.room</field>
        <field name="view_mode">list,form</field>
    </record>


</odoo>