<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Action -->
        <record id="action_hospital_booking" model="ir.actions.act_window">
            <field name="name">Room Bookings</field>
            <field name="res_model">hospital.booking</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- List View -->
        <record id="view_hospital_booking_list" model="ir.ui.view">
            <field name="name">hospital.booking.list</field>
            <field name="model">hospital.booking</field>
            <field name="arch" type="xml">
                <list string="Room Bookings">
                    <field name="department_id"/>
                    <field name="room_id"/>
                    <field name="room_type"/>
                    <field name="bed_id"/> 
                    <field name="patient_id"/>
                    <field name="days"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="price"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,invoiced,cancelled"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_hospital_booking_form" model="ir.ui.view">
            <field name="name">hospital.booking.form</field>
            <field name="model">hospital.booking</field>
            <field name="arch" type="xml">
                <form string="Room Booking">
                    <header>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed,invoiced,cancelled"/>
                        <button name="action_draft" type="object" string="Draft" class="btn-secondary"/>
                        <button name="action_confirm" type="object" string="Confirm" class="btn-success"/>
                        <button name="action_cancel" type="object" string="Cancel" class="btn-danger"/>
                    </header>

                    <sheet>
                        <group>
                            <group>
                                <field name="department_id"/>
                                <field name="room_id"/>
                                <field name="room_type" readonly="1"/>
                                <field name="bed_id"/>
                                <field name="patient_id"/>
                            </group>
                            <group>
                                <field name="days"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="price" readonly="1"/>
                                <field name="notes"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Optional: color coding for state in list view -->
        <record id="view_hospital_booking_list_colored" model="ir.ui.view">
            <field name="name">hospital.booking.list.colored</field>
            <field name="model">hospital.booking</field>
            <field name="inherit_id" ref="view_hospital_booking_list"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="attributes">
                    <attribute name="widget">statusbar</attribute>
                    <attribute name="statusbar_visible">draft,confirmed,invoiced,cancelled</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>