<odoo>
    <record id="view_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <sheet>
                    <group>
                        <field name="patient_id" 
                               options="{'no_open': False, 'no_create': False, 'create': True}" 
                               placeholder="Select or create a patient"/>
                        <field name="department_id"/>
                        <field name="doctor_id"/>
                        <field name="appointment_date"/>
                        <field name="reason"/>
                    </group>
                </sheet>
                <header>
    <!-- يظهر Confirm فقط إذا كانت الحالة draft -->
    <button name="action_confirm" type="object" string="✅ Confirm"
        class="btn-primary"
        invisible="state != 'draft'"/>

    <!-- يظهر Done فقط إذا كانت الحالة confirmed -->
    <button name="action_done" type="object" string="✅ Done"
        class="btn-success"
        invisible="state != 'confirmed'"/>

    <!-- يظهر Cancel فقط إذا كانت الحالة draft أو confirmed -->
    <button name="action_cancel" type="object" string="❌ Cancel"
        class="btn-danger"
        invisible="not (state == 'draft' or state == 'confirmed')"/>

    <!-- زر Draft يظهر فقط لو الحالة cancelled -->
    <button name="action_draft" type="object" string="🔄 Set to Draft"
        class="btn-secondary"
        invisible="state != 'cancelled'"/>
</header>

            </form>
        </field>
    </record>

    <record id="view_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments">
                <field name="patient_id"/>
                <field name="department_id"/>
                <field name="doctor_id"/>
                <field name="appointment_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

   
</odoo>
