    <odoo>
    <template id="report_medical_record_view">
        <t t-call="web.external_layout">
            <div class="header" style="text-align:center; border-bottom:2px solid #2E86C1; padding-bottom:5px;">
                <h2 style="margin:0; color:#2E86C1;">üè• The Healing Hospital</h2>
                <p style="margin:0;">Medical Record</p>
            </div>

            <t t-foreach="docs" t-as="o">
                <div class="page" style="margin-top:20px;">
                    <h1 style="text-align:center; color:#2E86C1;">Patient Medical Record üßë‚Äç‚öïÔ∏è</h1>
                    <hr/>
                    <h2 style="color:#1F618D;">Patient Info</h2>
                    <table style="width:100%; border-collapse: collapse;">
                        <tr>
                            <td><strong>Patient Code:</strong></td>
                            <td><t t-esc="o.patient_code"/></td>
                            <td><strong>Full Name:</strong></td>
                            <td><t t-esc="o.first_name"/> <t t-esc="o.last_name"/></td>
                        </tr>
                        <tr>
                            <td><strong>Date of Birth:</strong></td>
                            <td><t t-esc="o.dob"/></td>
                            <td><strong>Gender:</strong></td>
                            <td><t t-esc="o.gender"/></td>
                        </tr>
                        <tr>
                            <td><strong>Blood Type:</strong></td>
                            <td><t t-esc="o.blood_type"/></td>
                            <td><strong>Phone:</strong></td>
                            <td><t t-esc="o.phone"/></td>
                        </tr>
                        <tr>
                            <td><strong>Email:</strong></td>
                            <td><t t-esc="o.email"/></td>
                            <td><strong>Address:</strong></td>
                            <td><t t-esc="o.address"/></td>
                        </tr>
                        <tr>
                            <td><strong>Nationality:</strong></td>
                            <td colspan="3"><t t-esc="o.nationality"/></td>
                        </tr>
                    </table>

                    <h2 style="color:#1F618D; margin-top:20px;">Medical Info üíä</h2>
                    <p><strong>Allergies:</strong> <t t-esc="o.allergies or 'None'"/></p>
                    <p><strong>Diagnosis:</strong> <t t-esc="o.diagnosis or 'None'"/></p>

                    <h2 style="color:#1F618D; margin-top:20px;">Appointments üìÖ</h2>
                    <table style="width:100%; border:1px solid #ccc; border-collapse: collapse;">
                        <thead style="background-color:#D6EAF8;">
                            <tr>
                                <th style="border:1px solid #ccc; padding:5px;">Date</th>
                                <th style="border:1px solid #ccc; padding:5px;">Doctor</th>
                                <th style="border:1px solid #ccc; padding:5px;">Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.appointment_ids" t-as="appt">
                                <td style="border:1px solid #ccc; padding:5px;"><t t-esc="appt.appointment_date"/></td>
                                <td style="border:1px solid #ccc; padding:5px;"><t t-esc="appt.doctor_id.name or 'N/A'"/></td>
                                <td style="border:1px solid #ccc; padding:5px;"><t t-esc="appt.state"/></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </t>

            <div class="footer" style="text-align:center; border-top:2px solid #2E86C1; padding-top:5px; font-size:0.85em; color:#555;">
                Printed on <t t-esc="time.strftime('%Y-%m-%d %H:%M')"/> | Page <span class="page"/>
            </div>
        </t>
    </template>
    <record id="action_report_medical_record" model="ir.actions.report">
    <field name="name">Print Patient Info</field>
    <field name="model">hospital.patient</field>
    <field name="report_type">qweb-pdf</field>
    <field name="report_name">hospital.report_medical_record_view</field>
    <field name="report_file">hospital.report_medical_record_view</field>
    <field name="print_report_name">'Patient_Info_' + object.first_name + '_' + object.last_name</field>
    </record>

    </odoo>