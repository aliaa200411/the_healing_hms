<odoo>
    <!-- List View -->
    <record id="view_insurance_list" model="ir.ui.view">
        <field name="name">hospital.insurance.list</field>
        <field name="model">hospital.insurance</field>
        <field name="arch" type="xml">
            <list string="Insurance Companies">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="street"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="discount_percentage"/>
            </list>
        </field>
    </record>

    <!-- Form View with Smart Button -->
    <record id="view_insurance_form" model="ir.ui.view">
        <field name="name">hospital.insurance.form</field>
        <field name="model">hospital.insurance</field>
        <field name="arch" type="xml">
            <form string="Insurance Company">
                <header>
                    <!-- Smart Button to view patients -->
                    <button name="action_view_patients" type="object" string="Patients"
                            class="oe_stat_button" icon="fa-users"/>
                    <field name="patient_count" widget="statinfo" string="Patients"/>
                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="street"/>
                        <field name="city"/>
                        <field name="country_id"/>
                        <field name="discount_percentage"/>
                    </group>

                    <!-- One2many field to show patients -->
                    <group string="Linked Patients">
                        <field name="patient_ids" readonly="1">
                            <list string="Patients">
                                <field name="name"/>
                                <field name="age"/>
                                <field name="gender"/>
                                <field name="phone"/>
                            </list>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

   
</odoo>
