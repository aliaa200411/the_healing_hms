<odoo>
    <!-- Tree View (List of Patients) -->
    <record id="view_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.list</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <list string="Patients ">
                <field name="patient_code"/>
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="phone"/>
                <field name="gender"/>
                <field name="dob"/>
                <field name="age" readonly="1"/>
                <field name="blood_type"/>
            </list>
        </field>
    </record>

    <!-- Form View (Patient Form) -->
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patient ">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!-- Smart Button Prescriptions -->
                        <button name="action_view_prescriptions"
                                type="object"
                                string="Prescriptions"
                                icon="fa-stethoscope"
                                class="oe_stat_button"/>
                    </div>

                    <group string="Personal Information" col="2">
                        <field name="first_name"/>
                        <field name="last_name"/>
                        <field name="dob" widget="date"/>
                        <field name="age" readonly="1"/>
                        <field name="gender" widget="radio"/>
                        <field name="blood_type" widget="selection"/>
                    </group>

                    <group string="Contact And Demographics" col="2">
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="address"/>
                        <field name="nationality"/>
                    </group>

                    <group string="Insurance Information" col="2">
                        <field name="has_insurance"/>
                        <field name="insurance_company"/>
                        <field name="insurance_coverage" readonly="1"/>
                        <field name="insurance_discount" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Medical Info ">
                            <group>
                                <field name="allergies"/>
                                <field name="diagnosis"/>
                            </group>
                        </page>

                        <page string="Appointments ">
                            <field name="appointment_ids">
                                <list string="Appointments">
                                    <field name="appointment_date"/>
                                    <field name="state" widget="statusbar"
                                           statusbar_visible="draft,confirmed,done,cancel"/>
                                </list>
                            </field>
                        </page>

                        <page string="Prescriptions ">
                            <field name="prescription_ids">
                                <list string="Prescriptions">
                                    <field name="name"/>
                                    <field name="doctor_id" domain="[('job_title','=','doctor')]"/>
                                    <field name="date"/>
                                    <field name="state"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <header>
                    <button name="action_view_patient_history" 
                            type="object" 
                            string="View Patient History" 
                            class="btn-primary"
                            />
                </header>

            </form>


        </field>
    </record>

    <!-- Action for Patients -->
    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Medical Record</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
