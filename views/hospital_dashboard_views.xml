<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ================== Graph View: Insurance ================== -->
    <record id="view_hospital_patient_dashboard_graph_insurance" model="ir.ui.view">
        <field name="name">hospital.patient.dashboard.graph.insurance</field>
        <field name="model">hospital.patient.dashboard</field>
        <field name="arch" type="xml">
            <graph string="Insurance Ratio" type="bar">
                <field name="has_insurance" type="row"/>
                <field name="insurance_with_ratio" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- ================== Graph View: Gender ================== -->
    <record id="view_hospital_patient_dashboard_graph_gender" model="ir.ui.view">
        <field name="name">hospital.patient.dashboard.graph.gender</field>
        <field name="model">hospital.patient.dashboard</field>
        <field name="arch" type="xml">
            <graph string="Gender Ratio" type="pie">
                <field name="gender" type="row"/>
                <field name="gender_ratio" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- ================== List View ================== -->
    <record id="view_hospital_patient_dashboard_list" model="ir.ui.view">
        <field name="name">hospital.patient.dashboard.list</field>
        <field name="model">hospital.patient.dashboard</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false">
                <field name="patient_id"/>
                <field name="gender" widget="selection"/>
                <field name="blood_type"/>
                <field name="has_insurance"/>
                <field name="insurance_company"/>
                <field name="gender_ratio"/>
                <field name="insurance_with_ratio"/>
                <field name="avg_age"/>
                <field name="month"/>
            </list>
        </field>
    </record>

    <!-- ================== Form View ================== -->
    <record id="view_hospital_patient_dashboard_form" model="ir.ui.view">
        <field name="name">hospital.patient.dashboard.form</field>
        <field name="model">hospital.patient.dashboard</field>
        <field name="arch" type="xml">
            <form string="Patient Dashboard" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="gender" widget="selection"/>
                        <field name="blood_type"/>
                        <field name="has_insurance"/>
                        <field name="insurance_company"/>
                        <field name="gender_ratio"/>
                        <field name="insurance_with_ratio"/>
                        <field name="avg_age"/>
                        <field name="month"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
