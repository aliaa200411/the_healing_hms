<?xml version="1.0" encoding="UTF-8"?>
<odoo>
   
    <!-- ================== List View ================== -->
    <record id="view_hospital_room_dashboard_list" model="ir.ui.view">
        <field name="name">hospital.room.dashboard.list</field>
        <field name="model">hospital.room.dashboard</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false">
                <field name="department_id"/>
                <field name="total_rooms"/>
                <field name="occupied_rooms"/>
                <field name="available_rooms"/>
                <field name="total_beds"/>
                <field name="occupied_beds"/>
                <field name="available_beds"/>
                <field name="total_bookings"/>
                <field name="confirmed_bookings"/>
                <field name="cancelled_bookings"/>
            </list>
        </field>
    </record>

    <!-- ================== Form View ================== -->
    <record id="view_hospital_room_dashboard_form" model="ir.ui.view">
        <field name="name">hospital.room.dashboard.form</field>
        <field name="model">hospital.room.dashboard</field>
        <field name="arch" type="xml">
            <form string="Room Dashboard" create="false" edit="false">
                <sheet>
                    <group>
                        <field name="department_id"/>
                        <field name="total_rooms"/>
                        <field name="occupied_rooms"/>
                        <field name="available_rooms"/>
                        <field name="total_beds"/>
                        <field name="occupied_beds"/>
                        <field name="available_beds"/>
                        <field name="total_bookings"/>
                        <field name="confirmed_bookings"/>
                        <field name="cancelled_bookings"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
