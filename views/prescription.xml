<odoo>
    <!-- Tree View -->
    <record id="view_prescription_tree" model="ir.ui.view">
        <field name="name">hospital.prescription.list</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <list string="Prescriptions ">
                <field name="name"/>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date"/>
                <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_prescription_form" model="ir.ui.view">
        <field name="name">hospital.prescription.form</field>
        <field name="model">hospital.prescription</field>
        <field name="arch" type="xml">
            <form string="Prescription 💊">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="patient_id"/>
                        <field name="doctor_id" readonly="1"/>
                        <field name="date"/>
                        <field name="note"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,confirmed"/>
                    </group>

                    <notebook>
                        <page string="Medicines">
                            <field name="line_ids">
                                <list editable="bottom">
                                    <field name="medicine_id"/>
                                    <field name="medicine_form"/>
                                    <field name="dosage"/>
                                    <field name="times_per_day"/>
                                    <field name="duration"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <header>
                    <!-- زر التأكيد يظهر فقط إذا كانت الحالة draft -->
                    <button name="action_confirm"
                            type="object"
                            string=" Confirm"
                            class="btn-primary"
                            invisible="state != 'draft'"/>

                    <!-- زر الطباعة يظهر فقط إذا كانت الحالة confirmed -->
                    <button name="print_prescription_report"
                            string="🖨️ Print Prescription"
                            type="object"
                            class="btn-primary"
                            invisible="state != 'confirmed'"/>
                </header>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_prescription_patient" model="ir.actions.act_window">
        <field name="name">Prescriptions</field>
        <field name="res_model">hospital.prescription</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hospital_prescription"
              name="Prescriptions"
              parent="menu_hospital_root"
              action="action_prescription_patient"
              sequence="1"/>
</odoo>
