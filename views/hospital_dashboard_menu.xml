<odoo>
    <!-- ================== Root Menu ================== -->
    <menuitem id="menu_hospital_dashboard_root" 
              name="Hospital Dashboards" 
              sequence="10"
              groups="the_healing_hms.group_hospital_manager"/>

    <!-- ================== Actions ================== -->
    <!-- Department Dashboard -->
    <record id="action_hospital_department_dashboard" model="ir.actions.act_window">
        <field name="name">Department Dashboard</field>
        <field name="res_model">hospital.department.dashboard</field>
        <field name="view_mode">kanban,graph,list</field>
        <field name="groups_id" eval="[(4, ref('the_healing_hms.group_hospital_manager'))]"/>
    </record>

    <!-- Room Dashboard -->
    <record id="action_hospital_room_dashboard" model="ir.actions.act_window">
        <field name="name">Room Dashboard</field>
        <field name="res_model">hospital.room.dashboard</field>
        <field name="view_mode">kanban,graph,list</field>
        <field name="groups_id" eval="[(4, ref('the_healing_hms.group_hospital_manager'))]"/>
    </record>

    <!-- Medicine Dashboard -->
    <record id="action_hospital_medicine_dashboard" model="ir.actions.act_window">
        <field name="name">Medicine Dashboard</field>
        <field name="res_model">hospital.medicine.dashboard</field>
        <field name="view_mode">kanban,graph,list,form</field>
        <field name="groups_id" eval="[(4, ref('the_healing_hms.group_hospital_manager'))]"/>
    </record>

    <!-- Blood Bank Dashboard -->
    <record id="action_blood_bank_dashboard" model="ir.actions.act_window">
        <field name="name">Blood Bank Dashboard</field>
        <field name="res_model">blood.bank.dashboard</field>
        <field name="view_mode">kanban,graph,list,form</field>
        <field name="groups_id" eval="[(4, ref('the_healing_hms.group_hospital_manager'))]"/>
    </record>

    <!-- ================== Menu Items ================== -->
    <menuitem id="menu_hospital_department_dashboard"
              name="Department Dashboard"
              parent="menu_hospital_dashboard_root"
              action="action_hospital_department_dashboard"
              sequence="2"
              groups="the_healing_hms.group_hospital_manager"/>

    <menuitem id="menu_hospital_room_dashboard"
              name="Room Dashboard"
              parent="menu_hospital_dashboard_root"
              action="action_hospital_room_dashboard"
              sequence="3"
              groups="the_healing_hms.group_hospital_manager"/>

    <menuitem id="menu_hospital_medicine_dashboard"
              name="Medicine Dashboard"
              parent="menu_hospital_dashboard_root"
              action="action_hospital_medicine_dashboard"
              sequence="4"
              groups="the_healing_hms.group_hospital_manager"/>

    <menuitem id="menu_blood_bank_dashboard"
              name="Blood Bank Dashboard"
              parent="menu_hospital_dashboard_root"
              action="action_blood_bank_dashboard"
              sequence="5"
              groups="the_healing_hms.group_hospital_manager"/>
</odoo>
