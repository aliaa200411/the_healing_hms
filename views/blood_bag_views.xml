<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Blood Bag Tree -->
    <record id="view_blood_bag_list" model="ir.ui.view">
        <field name="name">blood.bank.bag.list</field>
        <field name="model">blood.bank.bag</field>
        <field name="arch" type="xml">
            <list string="Blood Bags" decoration-danger="status == 'expired'" decoration-muted="status == 'used'">
                <field name="name"/>
                <field name="donor_id" string="Donor's Name" widget="many2one" options="{'no_create': True}"/>
                <field name="blood_type"/>
                <field name="rh"/>
                <field name="donation_date"/>
                <field name="expiry_date"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!-- Blood Bag Form -->
    <record id="view_blood_bag_form" model="ir.ui.view">
        <field name="name">blood.bank.bag.form</field>
        <field name="model">blood.bank.bag</field>
        <field name="arch" type="xml">
            <form string="Blood Bag">
                <sheet>
                    <group>
                        <field name="name" readonly="1"/>
                        <field name="donor_id" string="Donor's Name"/>
                        <field name="blood_type"/>
                        <field name="rh"/>
                        <field name="donation_date"/>
                        <field name="expiry_date" readonly="1"/>
                        <field name="status" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="seq_blood_bank_bag" model="ir.sequence">
        <field name="name">Blood Bag Reference</field>
        <field name="code">blood.bank.bag</field>
        <field name="prefix">BB-</field>
        <field name="padding">5</field>
        <field name="number_increment">1</field>
        <field name="implementation">standard</field>
    </record>

    <!-- Blood Bag Action -->
    <record id="action_blood_bag" model="ir.actions.act_window">
        <field name="name">Blood Bags</field>
        <field name="res_model">blood.bank.bag</field>
        <field name="view_mode">list,form</field>
        <field name="help">Manage Blood Bags in the Blood Bank</field>
    </record>
</odoo>