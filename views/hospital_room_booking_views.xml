<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Action -->
        <record id="action_hospital_booking" model="ir.actions.act_window">
            <field name="name">Room Bookings</field>
            <field name="res_model">hospital.booking</field>
            <field name="view_mode">list,form</field>
        </record>

        <!-- List View -->
        <record id="view_hospital_booking_list" model="ir.ui.view">
            <field name="name">hospital.booking.list</field>
            <field name="model">hospital.booking</field>
            <field name="arch" type="xml">
                <list string="Room Bookings">
                    <field name="department_id"/>
                    <field name="room_id"/>
                    <field name="bed_id"/> 
                    <field name="patient_id"/>
                    <field name="days"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                    <field name="state"/>
                    <field name="price"/>
                </list>
            </field>
        </record>

        <!-- Form View -->
        <record id="view_hospital_booking_form" model="ir.ui.view">
            <field name="name">hospital.booking.form</field>
            <field name="model">hospital.booking</field>
            <field name="arch" type="xml">
                <form string="Room Booking">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button name="action_draft" type="object" string="Draft"/>
                        <button name="action_confirm" type="object" string="Confirm"/>
                        <button name="action_create_invoice" type="object" string="Create Invoice" class="btn-primary"/>
                        <button name="action_cancel" type="object" string="Cancel"/>
                    </header>

                    <sheet>
                        <group>
                            <group>
                                <field name="department_id"/>
                                <field name="room_id"/>
                                <field name="bed_id"/>
                                <field name="patient_id"/>
                            </group>
                            <group>
                                <field name="days"/>
                                <field name="date_from"/>
                                <field name="date_to"/>
                                <field name="price" readonly="1"/>
                                <field name="notes"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

    </data>
</odoo>
