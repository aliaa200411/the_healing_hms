    <record id="seq_hospital_pharmacist" model="ir.sequence">
        <field name="name">Hospital Pharmacist</field>
        <field name="code">hospital.pharmacist</field>
        <field name="prefix">PHR/</field>
        <field name="padding">3</field>
    </record> -->
</odoo>
