<odoo>
    <!-- List View -->
    <record id="view_insurance_list" model="ir.ui.view">
        <field name="name">hospital.insurance.list</field>
        <field name="model">hospital.insurance</field>
        <field name="arch" type="xml">
            <list string="Insurance Companies">
                <field name="name"/>
                <field name="phone"/>
                <field name="email"/>
                <field name="street"/>
                <field name="city"/>
                <field name="country_id"/>
                <field name="discount_percentage"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_insurance_form" model="ir.ui.view">
        <field name="name">hospital.insurance.form</field>
        <field name="model">hospital.insurance</field>
        <field name="arch" type="xml">
            <form string="Insurance Company">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="phone"/>
                        <field name="email"/>
                        <field name="street"/>
                        <field name="city"/>
                        <field name="country_id"/>
                        <field name="discount_percentage"/>
                        <field name="patient_ids" widget="many2many_tags" options="{'no_create': True}" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_insurance" model="ir.actions.act_window">
        <field name="name">Insurance Companies</field>
        <field name="res_model">hospital.insurance</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_hospital_insurance" name="Insurance Companies"
              parent="menu_hospital_accounting" action="action_insurance" sequence="20"/>
</odoo>
