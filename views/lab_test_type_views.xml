<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Lab Test Type Views -->
    <record id="view_lab_test_type_list" model="ir.ui.view">
        <field name="name">hospital.lab.test.type.list</field>
        <field name="model">hospital.lab.test.type</field>
        <field name="arch" type="xml">
            <list string="Lab Test Types">
                <field name="name" options="{'width': '100px'}"/>
                <field name="code" options="{'width': '100px'}"/>
                <field name="price" options="{'width': '100px'}"/>
                <field name="duration_hours" options="{'width': '100px'}"/>
            </list>

        </field>
    </record>

    <record id="view_lab_test_type_form" model="ir.ui.view">
        <field name="name">hospital.lab.test.type.form</field>
        <field name="model">hospital.lab.test.type</field>
        <field name="arch" type="xml">
            <form string="Lab Test Type">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="price"/>
                        <field name="duration_hours"/>
                    </group>
                    <group>
                        <field name="description"/>
                        <field name="notes"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_lab_test_type" model="ir.actions.act_window">
        <field name="name">Lab Test Types</field>
        <field name="res_model">hospital.lab.test.type</field>
        <field name="view_mode">list,form</field>
    </record>

  </odoo>
