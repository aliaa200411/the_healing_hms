<odoo>
   <record id="view_driver_tree" model="ir.ui.view">
    <field name="name">emergency.driver.list</field>
    <field name="model">healing_hms.emergency_driver</field>
    <field name="arch" type="xml">
        <list>
            <field name="name"/>
            <field name="phone"/>
            <field name="ambulance_license_number" readonly="1"/>
            <field name="status"/>
        </list>
    </field>
</record>

<record id="view_driver_form" model="ir.ui.view">
    <field name="name">emergency.driver.form</field>
    <field name="model">healing_hms.emergency_driver</field>
    <field name="arch" type="xml">
        <form>
            <sheet>
                <group>
                    <field name="name"/>
                    <field name="phone"/>
                    <field name="ambulance_license_number" readonly="1"/>
                    <field name="status"/>
                    <field name="ambulance_id"/>
                </group>
            </sheet>
        </form>
    </field>
</record>

<record id="action_driver" model="ir.actions.act_window">
    <field name="name">Drivers</field>
    <field name="res_model">healing_hms.emergency_driver</field>
    <field name="view_mode">list,form</field>
    <field name="help">Manage Ambulance Drivers</field>
</record>

</odoo>