<odoo>
    <record id="view_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form string="Appointment">
                <sheet>
                    <group>
                        <field name="patient_id" 
                               options="{'no_open': False, 'no_create': False, 'create': True}" 
                               placeholder="Select or create a patient"/>
                        <field name="department_id"/>
                        <field name="doctor_id"/>
                        <field name="appointment_date"/>
                        <field name="reason"/>
                    </group>
                </sheet>
                <header>
                    <button string="Confirm" type="object" name="action_confirm" class="btn-primary"/>
                    <button string="Done" type="object" name="action_done" class="btn-success"/>
                    <button string="Cancel" type="object" name="action_cancel" class="btn-danger"/>
                    <button string="Set to Draft" type="object" name="action_draft" class="btn-secondary"/>
                </header>
            </form>
        </field>
    </record>

    <record id="view_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.list</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <list string="Appointments">
                <field name="patient_id"/>
                <field name="department_id"/>
                <field name="doctor_id"/>
                <field name="appointment_date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="action_appointment" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>