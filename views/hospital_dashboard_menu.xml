<odoo>
    <!-- ================== Root Menu ================== -->
    <menuitem id="menu_hospital_dashboard_admin_root" 
              name="Hospital Dashboards" 
              sequence="10"
              groups="base.group_system"/>

    <!-- ================== Actions ================== -->
    <!-- Department Dashboard -->
   
     <record id="action_hospital_department_dashboard_admin" model="ir.actions.act_window">
        <field name="name">Department Dashboard</field>
        <field name="res_model">hospital.department.dashboard</field>
        <field name="view_mode">graph,list,form</field>
        <field name="view_id" eval="False"/>
    </record>

    <!-- ================== Department Dashboard Menu ================== -->
    

    <!-- Patient Dashboard -->
    <record id="action_hospital_patient_dashboard_admin" model="ir.actions.act_window">
        <field name="name">Patient Dashboard</field>
        <field name="res_model">hospital.patient.dashboard</field>
        <field name="view_mode">graph,list,form</field>
        <field name="view_id" eval="False"/>
    </record>

    <!-- Room Dashboard -->
   
      <record id="action_hospital_room_dashboard_admin" model="ir.actions.act_window">
        <field name="name">Room Dashboard</field>
        <field name="res_model">hospital.room.dashboard</field>
        <field name="view_mode">graph,list,form</field>
        <field name="view_id" eval="False"/>
        <field name="target">current</field>
    </record>

    <!-- Medicine Dashboard -->
       <record id="action_hospital_medicine_dashboard_admin" model="ir.actions.act_window">
        <field name="name">Medicine Dashboard</field>
        <field name="res_model">hospital.medicine.dashboard</field>
        <field name="view_mode">graph,list,form</field>
        <field name="view_id" eval="False"/>
        <field name="target">current</field>
    </record>


    <!-- Blood Bank Dashboard -->
   <record id="action_blood_bank_dashboard_admin" model="ir.actions.act_window">
        <field name="name">Blood Bank Dashboard</field>
        <field name="res_model">blood.bank.dashboard</field>
        <field name="view_mode">graph,list,form</field>
        <field name="view_ids" eval="[(5,0,0)]"/>
    </record>

    <!-- ================== Menu Items ================== -->
    <menuitem id="menu_hospital_department_dashboard_admin"
              name="Department Dashboard"
              parent="menu_hospital_dashboard_admin_root"
              action="action_hospital_department_dashboard_admin"
              sequence="1"/>

    <menuitem id="menu_hospital_patient_dashboard_admin"
              name="Patient Dashboard"
              parent="menu_hospital_dashboard_admin_root"
              action="action_hospital_patient_dashboard_admin"
              sequence="2"/>

   <!-- ================== Room Dashboard Menu ================== -->
    <menuitem id="menu_hospital_room_dashboard_admin"
              name="Room Dashboard"
              parent="menu_hospital_dashboard_admin_root"
              action="action_hospital_room_dashboard_admin"
              sequence="3"/>
           
    <menuitem id="menu_hospital_medicine_dashboard_admin"
              name="Medicine List"
              parent="menu_hospital_dashboard_admin_root"
              action="action_hospital_medicine_dashboard_admin"
              sequence="4"/>

    <menuitem id="menu_hospital_blood_bank_dashboard_admin"
              name="Blood Bank Dashboard"
              parent="menu_hospital_dashboard_admin_root"
              action="action_blood_bank_dashboard_admin"
              sequence="5"/>
</odoo>

