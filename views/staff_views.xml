<odoo>

    <!-- Staff Action -->
    <record id="action_staff" model="ir.actions.act_window">
        <field name="name">Staff</field>
        <field name="res_model">hospital.staff</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_hospital_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Staff List View -->
    <record id="view_staff_list" model="ir.ui.view">
        <field name="name">hospital.staff.list</field>
        <field name="model">hospital.staff</field>
        <field name="arch" type="xml">
            <list string="Hospital Staff">
                <field name="staff_id"/>
                <field name="user_id"/>
                <field name="department_id"/>
                <field name="position"/>
                <field name="hire_date"/>
            </list>
        </field>
    </record>

    <!-- Staff Form View -->
    <record id="view_staff_form" model="ir.ui.view">
        <field name="name">hospital.staff.form</field>
        <field name="model">hospital.staff</field>
        <field name="arch" type="xml">
            <form string="Staff">
                <sheet>
                    <group>
                        <field name="staff_id"/>
                        <field name="user_id"/>
                        <field name="department_id"/>
                        <field name="position"/>
                        <field name="hire_date"/>
                        <field name="salary"/>
                        <field name="is_active"/>
                    </group>

                    <notebook>
                        <page string="Patients">
                            <field name="patient_ids">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="doctor_id" string="Doctor"/> <!-- هاد العمود الجديد -->
                                    <field name="age"/>
                                    <field name="gender"/>
                                    <button name="%(action_hospital_patient)d" type="action" string="Medical Record" class="btn-primary"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>