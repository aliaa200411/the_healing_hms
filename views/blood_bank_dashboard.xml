<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- ================== Graph View (KPIs only) ================== -->
    <record id="view_blood_bank_dashboard_graph" model="ir.ui.view">
        <field name="name">blood.bank.dashboard.graph</field>
        <field name="model">blood.bank.dashboard</field>
        <field name="arch" type="xml">
            <graph string="Blood Bank Overview" type="bar">
                <field name="total_bags" type="measure"/>
                <field name="available_bags" type="measure"/>
                <field name="used_bags" type="measure"/>
                <field name="expired_bags" type="measure"/>
            </graph>
        </field>
    </record>

    <!-- ================== List View (with Blood Type Percentages) ================== -->
    <record id="view_blood_bank_dashboard_list" model="ir.ui.view">
        <field name="name">blood.bank.dashboard.list</field>
        <field name="model">blood.bank.dashboard</field>
        <field name="arch" type="xml">
            <list create="false" edit="false" delete="false">
                <field name="name"/>
                <field name="month"/>
                <field name="total_bags"/>
                <field name="available_bags"/>
                <field name="used_bags"/>
                <field name="expired_bags"/>
                <field name="most_needed_blood_type"/>
                <field name="percent_A_pos"/>
                <field name="percent_A_neg"/>
                <field name="percent_B_pos"/>
                <field name="percent_B_neg"/>
                <field name="percent_AB_pos"/>
                <field name="percent_AB_neg"/>
                <field name="percent_O_pos"/>
                <field name="percent_O_neg"/>
            </list>
        </field>
    </record>

    <!-- ================== Form View (with Blood Type Percentages) ================== -->
    <record id="view_blood_bank_dashboard_form" model="ir.ui.view">
        <field name="name">blood.bank.dashboard.form</field>
        <field name="model">blood.bank.dashboard</field>
        <field name="arch" type="xml">
            <form string="Blood Bank Dashboard" create="false" edit="false">
                <sheet>
                    <notebook>
                        <!-- ====== KPIs Page ====== -->
                        <page string="Overview">
                            <group>
                                <field name="name"/>
                                <field name="month"/>
                                <field name="total_bags"/>
                                <field name="available_bags"/>
                                <field name="used_bags"/>
                                <field name="expired_bags"/>
                                <field name="most_needed_blood_type"/>
                            </group>
                        </page>

                        <!-- ====== Blood Type Percentages Page ====== -->
                        <page string="Blood Type Percentages">
                            <group>
                                <field name="percent_A_pos" string="A+ (%)"/>
                                <field name="percent_A_neg" string="A- (%)"/>
                                <field name="percent_B_pos" string="B+ (%)"/>
                                <field name="percent_B_neg" string="B- (%)"/>
                                <field name="percent_AB_pos" string="AB+ (%)"/>
                                <field name="percent_AB_neg" string="AB- (%)"/>
                                <field name="percent_O_pos" string="O+ (%)"/>
                                <field name="percent_O_neg" string="O- (%)"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
